---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="max-w-4xl mx-auto bg-card rounded-lg p-8 shadow-xl">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-white mb-4">{frontmatter.title}</h1>
      <time class="text-accent-blue" datetime={frontmatter.date}>{frontmatter.date}</time>
    </header>
    
    <div class="prose prose-invert max-w-none">
      <slot />
    </div>
  </article>
</Layout>

<style is:global>
  .prose {
    color: #e5e7eb;
  }
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: white;
    margin-top: 2em;
    margin-bottom: 1em;
  }
  .prose h1 {
    font-size: 2.25em;
  }
  .prose h2 {
    font-size: 1.875em;
  }
  .prose h3 {
    font-size: 1.5em;
  }
  .prose p {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }
  .prose ul {
    list-style-type: disc;
    padding-left: 1.625em;
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }
  .prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }
  .prose strong {
    color: white;
    font-weight: 600;
  }
  .prose a {
    color: #3b82f6;
    text-decoration: underline;
  }
  .prose a:hover {
    color: #60a5fa;
  }
</style>